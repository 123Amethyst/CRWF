<core:FragmentDefinition
	xmlns="sap.m"
  xmlns:l="sap.ui.layout"
	xmlns:core="sap.ui.core"
	xmlns:tnt="sap.tnt"
  xmlns:t="sap.ui.table"
  xmlns:f="sap.ui.layout.form"
  xmlns:customInput="custom.customInput">
  <Dialog
    id="FormDetails"
		class="Padding DialogClass"
		title="{i18n>Home_ChangePassword}"
    contentWidth="200px">
    <customHeader>
      <Toolbar>
				<ToolbarSpacer/>
				<Title text="{i18n>Home_ChangePassword}"/>
				<ToolbarSpacer/>
				<Button icon="sap-icon://decline"
                tooltip="{i18n>Buttons_Cancel}"
                press=".onChangePassword_Cancel"
                class="LightButton_1"/>
			</Toolbar>
    </customHeader>
    <content>
      <VBox alignItems="Center">
        <!--账户-->
        <HBox>
          <HBox alignItems="Center">
            <core:Icon src="sap-icon://employee" 
                       color="#e90001"/>
            <layoutData>
              <FlexItemData baseSize="15%" maxWidth="15%" />
            </layoutData>
          </HBox>
          <Input
              required="true"
              editable="false"
              value="{FormData>/Account}"
              autocomplete="false"
              class="InputClass"/>
          <layoutData>
            <FlexItemData baseSize="90%" maxWidth="90%" />
          </layoutData>
        </HBox>
        <!--旧密码-->
        <HBox>
          <HBox alignItems="Center">
            <core:Icon src="sap-icon://locked" 
                       color="#e90001"/>
            <layoutData>
              <FlexItemData baseSize="15%" maxWidth="15%" />
            </layoutData>
          </HBox>
          <Input
            required="true"
            value="{FormData>/OldPasswordShow}"
            placeholder="{i18n>EnterOldPassword}"
            autocomplete="false"
            liveChange="liveChange_Form_OldPassword"
            class="InputClass"/>
          <layoutData>
            <FlexItemData baseSize="90%" maxWidth="90%" />
          </layoutData>
        </HBox>
        <!--新密码-->
        <HBox>
          <HBox alignItems="Center">
            <core:Icon src="sap-icon://locked" 
                       color="#e90001"/>
            <layoutData>
              <FlexItemData baseSize="15%" maxWidth="15%" />
            </layoutData>
          </HBox>
          <Input
            required="true"
            value="{FormData>/NewPasswordShow}"
            placeholder="{i18n>EnterNewPassword}"
            autocomplete="false"
            liveChange="liveChange_Form_NewPassword"
            class="InputClass"/>
          <layoutData>
            <FlexItemData baseSize="90%" maxWidth="90%" />
          </layoutData>
        </HBox>
        <!--确认密码-->
        <HBox>
          <HBox alignItems="Center">
            <core:Icon src="sap-icon://locked" 
                       color="#e90001"/>
            <layoutData>
              <FlexItemData baseSize="15%" maxWidth="15%" />
            </layoutData>
          </HBox>
          <Input
            id="ConfirmPassword"
            required="true"
            value="{FormData>/ConfirmPasswordShow}"
            placeholder="{i18n>EnterConfirmPassword}"
            liveChange="liveChange_Form_ConfirmPassword"
            autocomplete="false"
            class="InputClass"/>
          <layoutData>
            <FlexItemData baseSize="90%" maxWidth="90%" />
          </layoutData>
        </HBox>
      </VBox>
    </content>
    <beginButton>
      <Button text="{i18n>Buttons_Save}" press=".onChangePassword_Save" class="LightButton"/>
    </beginButton>
    <endButton>
      <Button text="{i18n>Buttons_Clear}" press=".onChangePassword_Clear" class="DarkButton"/>
    </endButton>
  </Dialog>
</core:FragmentDefinition>
