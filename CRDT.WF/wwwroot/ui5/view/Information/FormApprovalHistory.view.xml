<mvc:View
  height="100%"
  controllerName="crdt.wf.ui5.controller.Information.FormApprovalHistory"
  fieldGroupIds="approvalHistory"
  xmlns:mvc="sap.ui.core.mvc"
  xmlns="sap.m"
	xmlns:core="sap.ui.core"
  xmlns:t="sap.ui.table">
  <HBox class="HBoxClass">
    <t:Table
    id="Table_FormApprovalHistory"
    selectionMode="None"
		visibleRowCount="5"
    class="TableClass">
    <t:extension>
      <OverflowToolbar id="FormApprovalHistory_Toolbar" style="Clear" class="OverflowToolbarClass">
        <ObjectHeader
              icon="../../../img/bottle.png"
              titleLevel="H2"
              title="{i18n>FormApprovalHistory_Title}"
              class="ObjectHeaderClass" />
      </OverflowToolbar>
      <!--提示信息-->
      <VBox>
        <Label
          id="UploadTip"
          text=""/>
        <layoutData>
          <FlexItemData baseSize="15%" />
        </layoutData>
      </VBox>
    </t:extension>
    <t:columns>
      <!--审批环节-->
      <t:Column width="11rem">
        <Label text="{i18n>FormApprovalHistory_Field0}" />
        <t:template>
          <Text text="{PreStageName}"/>
        </t:template>
      </t:Column>
      <!--当前审批人-->
      <t:Column width="11rem">
        <Label text="{i18n>FormApprovalHistory_Field1}" />
        <t:template>
          <Text text="{ApproUserName}"/>
        </t:template>
      </t:Column>
      <!--审批人操作-->
      <t:Column width="11rem">
        <Label text="{i18n>FormApprovalHistory_Field2}" />
        <t:template>
          <Text text="{ApproTypeDesc}"/>
        </t:template>
      </t:Column>
      <!--审批日期-->
      <t:Column width="11rem">
        <Label text="{i18n>FormApprovalHistory_Field3}" />
        <t:template>
          <Text text="{ApproDate}"/>
        </t:template>
      </t:Column>
      <!--备注-->
      <t:Column width="11rem">
        <Label text="{i18n>FormApprovalHistory_Field4}" />
        <t:template>
          <Text text="{ApproDesc}"/>
        </t:template>
      </t:Column>
      <!--代理人-->
      <t:Column width="11rem">
        <Label text="{i18n>FormApprovalHistory_Field5}" />
        <t:template>
          <Text text="{AgentUserName}"/>
        </t:template>
      </t:Column>
    </t:columns>
  </t:Table>
  </HBox>
</mvc:View>
