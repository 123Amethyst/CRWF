<mvc:View
    height="100%"
    controllerName="crdt.wf.ui5.controller.SystemSettings.DelegationSetting"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:l="sap.ui.layout"
    xmlns:t="sap.ui.table"
    xmlns:f="sap.ui.layout.form">
  <Page
    showHeader="false" >
    <l:BlockLayout background="Dashboard">
      <l:BlockLayoutRow>
        <l:BlockLayoutCell>
          <t:Table
              id="OtherSetting_DelegationSetting_Table"
		          visibleRowCount="10"
              selectionMode="None"
              rowActionCount="2"
              class="TableClass">
            <t:extension>
              <OverflowToolbar style="Clear">
                <Title level="H2" titleStyle="H2" text="{i18n>OtherSetting_DelegationSetting_Title}" class="formTitle"/>
                <ToolbarSpacer/>
                <Button 
                  text="{i18n>xbut.buttonAdd}" 
                  class="DefaultButton AutoButton" 
                  press="onOtherSetting_DelegationSetting_Add" />
                <Button
                   icon="sap-icon://synchronize"
                   tooltip="{i18n>Buttons_Refresh}"
                   class="DefaultButton AutoButton"
                   press="onRefreshTable"/>
              </OverflowToolbar>
            </t:extension>
            <t:rowActionTemplate>
              <t:RowAction>
                <t:items>
                  <t:RowActionItem
                    icon="sap-icon://edit"
                    text="{i18n>xbut.buttonEdit}"
                    press="onOtherSetting_DelegationSetting_Edit" />
                  <t:RowActionItem
                    icon="sap-icon://delete"
                    text="{i18n>xbut.buttonDelete}"
                    type="Delete"
                    press="onOtherSetting_DelegationSetting_Delete" />
                </t:items>
              </t:RowAction>
            </t:rowActionTemplate>
            <t:columns>
              <!--授权人ID-->
              <t:Column width="9rem" filterProperty="FromUserAccount">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field0}" />
                <t:template>
                  <Text text="{FromAccount}"/>
                </t:template>
              </t:Column>
              <!--授权人名称-->
              <t:Column width="9rem" filterProperty="FromUserName">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field1}" />
                <t:template>
                  <Text text="{FromUserName}"/>
                </t:template>
              </t:Column>
              <!--被授权人ID-->
              <t:Column width="9rem" filterProperty="ToUserAccount">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field2}" />
                <t:template>
                  <Text text="{ToAccount}"/>
                </t:template>
              </t:Column>
              <!--被授权人名称-->
              <t:Column width="9rem" filterProperty="ToUserName">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field3}" />
                <t:template>
                  <Text text="{ToUserName}"/>
                </t:template>
              </t:Column>
              <!--开始日期-->
              <t:Column width="9rem" filterProperty="FromDate">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field4}" />
                <t:template>
                  <Text text="{FromDate}"/>
                </t:template>
              </t:Column>
              <!--结束日期-->
              <t:Column width="9rem" filterProperty="ToDate">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field5}" />
                <t:template>
                  <Text text="{ToDate}"/>
                </t:template>
              </t:Column>
              <!--<t:Column width="9rem" filterProperty="IsActive_TEXT">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field6}" />
                <t:template>
                  <ObjectStatus text="{IsActive_TEXT}" state="{
								      path: 'IsActive',
								      formatter: '.formatIsActiveToObjectState'
							      }"/>
                </t:template>
              </t:Column>-->
              <!--创建时间-->
              <t:Column width="9rem" filterProperty="AgentDate">
                <Label text="{i18n>OtherSetting_DelegationSetting_Field7}" />
                <t:template>
                  <Text text="{AgentDate}"/>
                </t:template>
              </t:Column>
            </t:columns>
          </t:Table>
        </l:BlockLayoutCell>
      </l:BlockLayoutRow>
    </l:BlockLayout>
  </Page>
</mvc:View>